alias vim="nvim"
alias vimconfig="vim ~/.config/nvim/init.vim"
alias fishconfig="vim ~/.config/fish/config.fish"
alias fishaliases="vim ~/.config/fish/.fish_aliases"

# git abbreviations
abbr gl "git log --oneline --all --graph --decorate"
abbr glo "git log"
abbr gp "git push"
abbr gb "git branch"
abbr gs "git status"
abbr co "git checkout"
abbr gcl "git clone"
abbr gcm "git checkout master"
abbr gfu "git fetch upstream"
abbr gmo "git merge origin/master"
abbr gmu "git merge upstream/master"
abbr cob "git checkout -b"
abbr cm "git add -A && git commit"
abbr cmm "git add -A && git commit -m"
